{% extends "templates/app.twig" %}
{% block naslov %}
<div class="row mt-md-5">
  <div class="col">
    <h1>
      <i class="fas fa-users text-secondary"></i> Korisnici apllikacije
    </h1>
  </div>
</div>
<hr />
{% endblock naslov %}
{% block sadrzaj %}
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th class="w-10">#</th>
      <th class="w-40">Ime</th>
      <th class="w-30">Korisničko ime</th>
      <th class="w-10 text-right">Nivo</th>
      <th class="w-10 text-right"><i class="fas fa-cogs text-warning"></i></th>
    </tr>
  </thead>
  <tbody>
    {% for korisnik in data.data %}
    <tr>
      <td class="text-danger">{{ korisnik.id }}</td>
      <td>{{ korisnik.ime }}</td>
      <td>{{ korisnik.korisnicko_ime }}</td>
      <td class="text-right">
        {% if korisnik.nivo == 0 %}
          Admin
        {% elseif korisnik.nivo == 100 %}
          Obrada
        {% else %}
          Pregled
        {% endif %}
      </td>
      <td class="text-right">
          <div class="btn-group btn-group-sm">
            <button class="btn btn-success btn-sm otvori-izmenu" data-toggle="modal" data-target="#izmenaModal"
            data-id="{{ korisnik.id }}" title="Izmena podataka odabrane sale">
            <i class="fas fa-edit"></i></button>
            <button class="btn btn-warning btn-sm otvori-brisanje" data-toggle="modal" data-target="#brisanjeModal"
            value="{{ korisnik.id }}" title="Brisanje odabrane sale">
            <i class="fas fa-trash-alt"></i>
            </button>
          </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<div class="row">
<nav class="col">
	<ul class="pagination pagination-sm">
		{% for button in data.links.buttons %}
		<li class="page-item{{ button.current ? ' active' : '' }}">
			<a class="page-link" href="{{ button.url }}">{{ button.page }}</a>
		</li>
		{% endfor %}
	</ul>
</nav>
<p class="col justify-content-end text-right text-info">
  <strong>
      Prikazani redovi od
      <em>{{ data.links.row_from }}</em> do
      <em>{{ data.links.row_to }}</em> od ukupno
      <em>{{ data.links.total_rows }}</em>
  </strong>
</p>
</div>

  {# Modal za brisanje #}
  <div id="brisanjeModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-danger">Upozorenje!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h3>Da li želite trajno da obrišete korisnika?</h3>
          <p class="text-danger">* Ova akcija je nepovratna!</p>
          <form id="brisanje-forma" action="{{ path_for('admin.korisnik.brisanje') }}" method="POST">
            {{ csrf|raw }}
            <input type="hidden" id="idBrisanje" name="idBrisanje">
            <hr style="margin-top: 30px;">

            <div class="row justify-content-end" style="margin-top: 30px; padding: 10px;">
              <div class="form-group">
                <button id="btn-brisanje-obrisi" type="submit" class="btn btn-outline-warning">
                  <i class="fas fa-trash-alt"></i>&emsp;Obriši
                </button>
                <a class="btn btn-outline-secondary" data-dismiss="modal">
                  <i class="fas fa-ban"></i>&emsp;Otkaži
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {# Kraj modala za brisanje #}

  {# Modal za izmenu #}
  <div id="izmenaModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-danger">Izmeni podatke korisnika</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="izmena-forma" action="{{ path_for('admin.korisnik.izmena') }}" method="POST">
            {{ csrf|raw }}
            <input type="hidden" id="idIzmena" name="idIzmena">
            <div class="form-group">
    <label for="imeM">Ime</label>
    <input
      class="form-control"
      type="text"
      name="imeM"
      id="imeM"
      autocomplete="off"
    />
  </div>
          <div class="form-group">
    <label for="korisnicko_imeM">Korisničko ime</label>
    <input
      class="form-control"
      type="text"
      name="korisnicko_imeM"
      id="korisnicko_imeM"
      autocomplete="off"
    />
  </div>
    <div class="form-group">
    <label for="lozinkaM" class="uk-form-label">Lozinka</label>
    <input
      class="form-control"
      type="password"
      name="lozinkaM"
      id="lozinkaM"
      class="uk-input"
      autocomplete="new-password"
    />
  </div>
    <div class="form-group">
    <label for="lozinka_potvrdaM" class="uk-form-label">Potvrda lozinke</label>
    <input
      class="form-control"
      type="password"
      name="lozinka_potvrdaM"
      id="lozinka_potvrdaM"
      class="uk-input"
      autocomplete="off"
    />
  </div>
  <div class="form-group">
    <label for="nivoM">Nivo korisničkih prava</label>
    <select class="form-control" id="nivoM" name="nivoM">
    </select>
  </div>
            <hr style="margin-top: 30px;">
            <div class="row justify-content-end" style="margin-top: 30px; padding: 10px;">
              <div class="form-group">
                <a class="btn btn-outline-secondary" data-dismiss="modal">
                  <i class="fas fa-ban"></i>&emsp;Otkaži
                </a>
                <button id="btn-brisanje-izmeni" type="submit" class="btn btn-outline-success">
                  <i class="fas fa-edit"></i>&emsp;Izmeni
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {# Kraj modala za izmenu #}
{% endblock sadrzaj %} 
{% block traka%}
  <div class="card border-dark mb-3">
    <div class="card-header">Dodavanje novog korisnika</div>
    <div class="card-body text-dark">
      <form action="{{ path_for('admin.korisnik.dodavanje') }}" method="POST">
        {{ csrf|raw }}
    <div class="form-group">
    <label for="ime">Ime</label>
    <input
      class="form-control"
      type="text"
      name="ime"
      id="ime"
      value="{{ old.ime }}"
      autocomplete="off"
    />
  </div>
          <div class="form-group">
    <label for="korisnicko_ime">Korisničko ime</label>
    <input
      class="form-control"
      type="text"
      name="korisnicko_ime"
      id="korisnicko_ime"
      value="{{ old.korisnicko_ime }}"
      autocomplete="off"
    />
  </div>
    <div class="form-group">
    <label for="lozinka" class="uk-form-label">Lozinka</label>
    <input
      class="form-control"
      type="password"
      name="lozinka"
      id="lozinka"
      class="uk-input"
      autocomplete="new-password"
    />
  </div>
    <div class="form-group">
    <label for="lozinka_potvrda" class="uk-form-label">Potvrda lozinke</label>
    <input
      class="form-control"
      type="password"
      name="lozinka_potvrda"
      id="lozinka_potvrda"
      class="uk-input"
      autocomplete="off"
    />
  </div>
  <div class="form-group">
    <label for="nivo">Nivo korisničkih prava</label>
    <select class="form-control" id="nivo" name="nivo">
      <option value="0">Admin</option>
      <option value="100">Obrada</option>
      <option value="200">Pregled</option>
    </select>
  </div>
         <div class="row justify-content-end text-right">
            <div class="col">
              <button type="submit" class="btn btn-info text-right"><i class="fas fa-plus-square" title="Dodavanje novog korisnika"></i> &emsp;Dodaj</button>
              <a href="{{ path_for('admin.korisnik.lista') }}" class="btn btn-outline-warning"><i class="fas fa-ban"></i> &emsp;Otkaži</a>
            </div>
        </div>
      </form>
    </div>
  </div>
{% endblock traka %}
{% block skripta %}
  <script>
    $(document).ready(function () {


      $(document).on('click', '.otvori-brisanje', function () {
        var id = $(this).val();
        $('#idBrisanje').val(id);
      });


      $(document).on('click', '.otvori-izmenu', function () {

        var csrfName = $(".csrf_name").val();
        var csrfValue = $(".csrf_value").val();
        var id = $(this).data("id");

        var csrfAndData = {
          "csrf_name": csrfName,
          "csrf_value": csrfValue,
          "id": id
        };

        var ruta = ["{{ path_for('admin.korisnik.detalj') }}"];

        $.ajax({
          url: ruta,
          type: "POST",
          data: csrfAndData,
          success: function (data) {
            $(".csrf_name").val(data.cname);
            $(".csrf_value").val(data.cvalue);
            $("#idIzmena").val(data.korisnik.id);
            $("#imeM").val(data.korisnik.ime);
            $("#korisnicko_imeM").val(data.korisnik.korisnicko_ime);

            $.each(data.nivoi, function(index, lokObjekat){
            $('#nivoM').append('<option value="'+lokObjekat.vrednost+'">'+lokObjekat.naziv+'</option>');
            });
            $("#nivoM").val(data.korisnik.nivo);
          }
        });

      });

    });
  </script>
{% endblock skripta %}