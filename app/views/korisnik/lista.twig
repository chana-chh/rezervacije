{% extends "templates/app.twig" %} {% block stil %} {% endblock stil %} {% block
naslov %} {% endblock naslov %} {% block sadrzaj %}
<h1><i class="fas fa-users"></i> Korisnici apllikacije</h1>
<hr />
<table class="table">
  <thead>
    <tr>
      <th class="w-10">#</th>
      <th class="w-40">Ime</th>
      <th class="w-30">Korisni훾ko ime</th>
      <th class="w-10 text-right">Nivo</th>
      <th class="w-10 text-right"><i class="fas fa-cogs"></i></th>
    </tr>
  </thead>
  <tbody>
    {% for korisnik in data.data %}
    <tr>
      <td class="text-danger">{{ korisnik.id }}</td>
      <td>{{ korisnik.ime }}</td>
      <td>{{ korisnik.korisnicko_ime }}</td>
      <td class="text-right">{{ korisnik.nivo }}</td>
      <td class="text-right">
        <div class="btn-group btn-group-sm">
          <a class="btn btn-warning" href=""><i class="fas fa-edit"></i></a>
          <a class="btn btn-danger" href=""><i class="fas fa-trash"></i></a>
        </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<nav>
	<ul class="pagination">
		{% for button in data.links.buttons %}
		<li class="page-item{{ button.current ? ' active' : '' }}">
			<a class="page-link" href="{{ button.url }}">{{ button.page }}</a>
		</li>
		{% endfor %}
	</ul>
</nav>
{% endblock sadrzaj %} {% block traka%}
<h1><i class="fas fa-user-plus"></i> Dodavanje korisnika</h1>
<hr />
<form action="" method="POST">
  {{ csrf | raw }}
  <div class="form-group">
    <label for="ime">Ime</label>
    <input
      class="form-control"
      type="text"
      name="ime"
      id="ime"
      value="{{ old.ime }}"
      autocomplete="off"
    />
  </div>
  <div class="form-group">
    <label for="korisnicko_ime">Korisni훾ko ime</label>
    <input
      class="form-control"
      type="text"
      name="korisnicko_ime"
      id="korisnicko_ime"
      value="{{ old.korisnicko_ime }}"
      autocomplete="off"
    />
  </div>
  <div class="form-group">
    <label for="lozinka" class="uk-form-label">Lozinka</label>
    <input
      class="form-control"
      type="password"
      name="lozinka"
      id="lozinka"
      class="uk-input"
      autocomplete="new-password"
    />
  </div>
  <div class="form-group">
    <label for="lozinka_potvrda" class="uk-form-label">Potvrda lozinke</label>
    <input
      class="form-control"
      type="password"
      name="lozinka_potvrda"
      id="lozinka_potvrda"
      class="uk-input"
      autocomplete="off"
    />
  </div>

  <div class="form-group">
    <label for="nivo">Example select</label>
    <select class="form-control" id="nivo" name="nivo">
      <option value="0">Admin</option>
      <option value="100">Tehni훾ar</option>
      <option value="200">Lekar</option>
      <option value="300">Vlasnik</option>
    </select>
  </div>

  <div class="btn-group float-right">
    <input type="submit" value="Dodaj korisnika" class="btn btn-primary" />
    <a href="{{ path_for('admin.korisnik.lista') }}" class="btn btn-danger"
      >Otka탑i prijavu</a
    >
  </div>
</form>
{% endblock traka %} {% block skripta %} {% endblock skripta %}
