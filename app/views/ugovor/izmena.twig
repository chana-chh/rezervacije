            {% for meni in meniji %}
            <option value="{{ meni.id }}" {{ (old.meni_id == meni.id or ugovor.meni_id == meni.id) ? ' selected' : '' }} data-cenamenija="{{ meni.cena }}">
            {{ meni.naziv }} - ({{ meni.cena|number_format() }})
