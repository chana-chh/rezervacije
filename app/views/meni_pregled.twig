{% extends "templates/app.twig" %} 
{% block naslov %}
<div class="row mt-md-5">
    <div class="col">
      <h1>
        <i class="fas fa-drumstick-bite text-secondary"></i> Pregled menija <strong class="text-capitalize text-warning">{{ meni.naziv }}</strong>
      </h1>
    </div>
    <div class="col justify-content-end text-right mt-3">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
  <button type="button" class="btn btn-secondary btn-sm" onclick="window.history.back();"><i class="fas fa-chevron-circle-left"></i> Nazad</button>
  <a href="{{ path_for('meni') }}" class="btn btn-secondary btn-sm"><i class="fas fa-drumstick-bite"></i> SVI meniji</a>
</div>
    </div>
  </div>
  <hr />
   <div class="row justify-content-center">
    <div class="col-11 bg-light text-dark">
      <h3 class="font-italic">Hladno predjelo</h3>
<hr style="border-top: 1px dotted #8c8b8b">
{% set predjela = meni.hladno_predjelo|split(',')%}
<ul>
  {% for p in predjela %}
    <li>{{p}}</li>
  {% endfor %}
</ul>
<h3 class="font-italic">Sirevi</h3>
<hr style="border-top: 1px dotted #8c8b8b">
{% set predjela = meni.sirevi|split(',')%}
