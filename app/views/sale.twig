{% extends "templates/app.twig" %} 
{% block naslov %}
<div class="row mt-md-5">
  <div class="col">
    <h1>
      <i class="fas fa-warehouse text-secondary"></i> Pregled sala
    </h1>
  </div>
</div>
<hr />
{% endblock naslov %} 
{% block sadrzaj %}
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th class="w-5" scope="col">#</th>
        <th class="w-30" scope="col">Naziv</th>
        <th class="w-15" scope="col">Kapacitet</th>
        <th class="w-30" scope="col">Napomena</th>
        <th class="w-20" scope="col" style="text-align:right;"><i class="fas fa-cogs text-warning"></i></th>
      </tr>
    </thead>
    <tbody>
      {% for sala in sale %}
      <tr>
        <th scope="row">{{ loop.index }}</th>
        <td>{{ sala.naziv }}</td>
        <td>{{ sala.max_kapacitet }}</td>
        <td>{{ sala.napomena }}</td>
        <td style="text-align:right;">
          <div class="btn-group btn-group-sm">
            <button class="btn btn-success btn-sm otvori-izmenu" data-toggle="modal" data-target="#izmenaModal"
            data-id="{{ sala.id }}" title="Izmena podataka odabrane sale">
            <i class="fas fa-edit"></i></button>
            <button class="btn btn-warning btn-sm otvori-brisanje" data-toggle="modal" data-target="#brisanjeModal"
            value="{{ sala.id }}" title="Brisanje odabrane sale">
            <i class="fas fa-trash-alt"></i>
            </button>
          </div>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  {# Modal za brisanje #}
  <div id="brisanjeModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-danger">Upozorenje!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h3>Da li želite trajno da obrišete salu?</h3>
          <p class="text-danger">* Ova akcija je nepovratna!</p>
          <form id="brisanje-forma" action="{{ path_for('sale.brisanje') }}" method="POST">
            {{ csrf|raw }}
            <input type="hidden" id="idBrisanje" name="idBrisanje">
            <hr style="margin-top: 30px;">

            <div class="row justify-content-end" style="margin-top: 30px; padding: 10px;">
              <div class="form-group">
                <button id="btn-brisanje-obrisi" type="submit" class="btn btn-outline-warning">
                  <i class="fas fa-trash-alt"></i>&emsp;Obriši
                </button>
                <a class="btn btn-outline-secondary" data-dismiss="modal">
                  <i class="fas fa-ban"></i>&emsp;Otkaži
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {# Kraj modala za brisanje #}

  {# Modal za izmenu #}
  <div id="izmenaModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-danger">Izmeni stavku</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="izmena-forma" action="{{ path_for('sale.izmena') }}" method="POST">
            {{ csrf|raw }}
            <input type="hidden" id="idIzmena" name="idIzmena">
            <div class="form-group">
              <label for="nazivModal">Naziv</label>
              <input type="text" class="form-control" name="nazivModal" id="nazivModal" aria-describedby="naziv sale">
              <small id="greska" class="form-text text-muted">Ovde cemo da sinemo gresku!</small>
            </div>
            <div class="form-group">
              <label for="max_kapacitet_Modal">Kapacitet sale</label>
              <input type="number" class="form-control" name="max_kapacitet_Modal" id="max_kapacitet_Modal">
            </div>
            <div class="form-group">
              <label for="napomenaModal">Napomena</label>
              <textarea class="form-control" name="napomenaModal" id="napomenaModal" rows="3"></textarea>
            </div>
            <hr style="margin-top: 30px;">
            <div class="row justify-content-end" style="margin-top: 30px; padding: 10px;">
              <div class="form-group">
                <a class="btn btn-outline-secondary" data-dismiss="modal">
                  <i class="fas fa-ban"></i>&emsp;Otkaži
                </a>
                <button id="btn-brisanje-izmeni" type="submit" class="btn btn-outline-success">
                  <i class="fas fa-edit"></i>&emsp;Izmeni
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {# Kraj modala za izmenu #}

{% endblock sadrzaj %} 
{% block traka %}
  <div class="card border-dark mb-3">
    <div class="card-header">Dodavanje nove sale</div>
    <div class="card-body text-dark">
      <form action="{{ path_for('sale.dodavanje') }}" method="POST">
        {{ csrf|raw }}
        <div class="form-group">
          <label for="naziv">Naziv</label>
          <input type="text" class="form-control" name="naziv" id="naziv" aria-describedby="naziv sale">
          <small id="greska" class="form-text text-muted">Ovde cemo da sinemo gresku!</small>
        </div>
        <div class="form-group">
          <label for="max_kapacitet">Kapacitet sale</label>
          <input type="number" class="form-control" name="max_kapacitet" id="max_kapacitet">
        </div>
        <div class="form-group">
          <label for="napomena">Napomena</label>
          <textarea class="form-control" name="napomena" id="napomena" rows="3"></textarea>
        </div>
         <div class="row justify-content-end text-right">
            <div class="col">
              <button type="submit" class="btn btn-info text-right"><i class="fas fa-plus-square" title="Dodavanje nove sale"></i> &emsp;Dodaj</button>
            </div>
        </div>
      </form>
    </div>
  </div>
{% endblock traka %}
{% block skripta %}
  <script>
    $(document).ready(function () {


      $(document).on('click', '.otvori-brisanje', function () {
        var id = $(this).val();
        $('#idBrisanje').val(id);
      });


      $(document).on('click', '.otvori-izmenu', function () {

        var csrfName = $(".csrf_name").val();
        var csrfValue = $(".csrf_value").val();
        var id = $(this).data("id");

        var csrfAndData = {
          "csrf_name": csrfName,
          "csrf_value": csrfValue,
          "id": id
        };

        var ruta = ["{{ path_for('sale.detalj') }}"];

        $.ajax({
          url: ruta,
          type: "POST",
          data: csrfAndData,
          success: function (data) {
            $(".csrf_name").val(data.cname);
            $(".csrf_value").val(data.cvalue);
            $("#idIzmena").val(data.sala.id);
            $("#nazivModal").val(data.sala.naziv);
            $("#max_kapacitet_Modal").val(data.sala.max_kapacitet);
            $("#napomenaModal").val(data.sala.napomena);
          }
        });

      });

    });
  </script>
{% endblock skripta %}

