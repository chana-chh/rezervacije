{% extends "templates/app.twig" %} 
{% block naslov %}
<h1 class="text-center display-1">
  <i class="fas fa-warehouse"></i> Sale
</h1>
<hr />
{% endblock naslov %} 
{% block sadrzaj %}
  <table class="table">
  <thead class="thead-dark">
    <tr>
      <th class="w-5" scope="col">#</th>
      <th class="w-5" scope="col">ID</th>
      <th class="w-60" scope="col">Naziv</th>
      <th class="w-20" scope="col">Kapacitet</th>
      <th class="w-10" scope="col">Akcije</th>
    </tr>
  </thead>
  <tbody>
    {% for sala in sale %}
    <tr>
      <th scope="row">{{ loop.index }}</th>
      <td >{{ sala.id }}</td>
      <td>{{ sala.naziv }}</td>
      <td>{{ sala.max_kapacitet }}</td>
      <td><i class="fas fa-edit"></i> <i class="fas fa-trash-alt"></i></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock sadrzaj %} 
{% block traka %}
  <div class="card border-dark mb-3">
  <div class="card-header">Dodavanje nove sale</div>
  <div class="card-body text-dark">
    <form>
  <div class="form-group">
    <label for="naziv">Naziv</label>
    <input type="text" class="form-control" id="naziv" aria-describedby="naziv sale">
    <small id="naziv" class="form-text text-muted">Ovde cemo da sinemo gresku!</small>
  </div>
  <div class="form-group">
    <label for="kapacitet">Kapacitet sale</label>
    <input type="number" class="form-control" id="kapacitet">
  </div>
  <button type="submit" class="btn btn-primary"><i class="fas fa-plus-square"></i> &emsp;Dodaj</button>
</form>
  </div>
</div>
{% endblock traka %}

